            <ComboBoxItem>Deflate</ComboBoxItem>
            <ComboBoxItem>Bar Code</ComboBoxItem>
            <ComboBoxItem>URI</ComboBoxItem>
            <ComboBoxItem>Abjad</ComboBoxItem>
            <ComboBoxItem>Polybius Square</ComboBoxItem>
            <ComboBoxItem>Polybius Square - Encoded</ComboBoxItem>
            <ComboBoxItem>Image Code</ComboBoxItem>
            <ComboBoxItem>Image Code - Alphanumeric Only</ComboBoxItem>
            -->
